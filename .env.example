# .env - Environment variables configuration
# Database
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=buyitforlife

# Application
PORT=8000
FRONTEND_URL=http://localhost:3000

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant-name.auth0.com
AUTH0_API_AUDIENCE=https://api.buyitforlife-tracker.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Reddit API
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=BuyItForLifeSaleTracker/1.0
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password

# Email configuration
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USERNAME=apikey
EMAIL_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=notifications@buyitforlife-tracker.com
EMAIL_FROM_NAME=BuyItForLife Sale Tracker

# Logging
LOG_LEVEL=info